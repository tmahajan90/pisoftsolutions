<!-- Payment Header -->
<section class="bg-gradient-to-r from-green-600 to-blue-600 text-white py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold mb-2">Complete Payment</h1>
      <p class="text-lg opacity-90">Secure payment powered by Razorpay</p>
    </div>
  </div>
</section>

<!-- Payment Content -->
<section class="py-8 bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Payment Form -->
      <div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center mr-3">
              <i class="fas fa-credit-card text-white text-sm"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-900">Payment Details</h2>
          </div>
          
          <!-- Order Summary -->
          <div class="mb-6 p-4 bg-gray-50 rounded-lg">
            <h3 class="font-semibold text-gray-900 mb-3">Order Summary</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Order ID:</span>
                <span class="font-medium">#<%= @order.id %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Total Amount:</span>
                <span class="font-bold text-green-600">₹<%= @order.final_total %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Items:</span>
                <span class="font-medium"><%= @order.order_items.sum(:quantity) %></span>
              </div>
            </div>
          </div>

          <!-- Razorpay Payment Button -->
          <div class="text-center">
            <% if @order.razorpay_order_id&.start_with?('order_mock_') %>
              <!-- Test Mode Payment Button -->
              <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
                <div class="flex items-center">
                  <i class="fas fa-exclamation-triangle text-yellow-600 mr-2"></i>
                  <span class="text-yellow-800 font-medium">Test Mode - Mock Payment</span>
                </div>
                <p class="text-yellow-700 text-sm mt-1">This is a test payment. No real money will be charged.</p>
              </div>
              <button id="test-payment-button" class="w-full bg-gradient-to-r from-yellow-600 to-orange-600 hover:from-yellow-700 hover:to-orange-700 text-white py-4 px-6 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105 cursor-pointer">
                <i class="fas fa-play mr-2"></i>Test Payment ₹<%= @order.final_total %>
              </button>
            <% else %>
              <!-- Real Razorpay Payment Button -->
              <button id="rzp-button" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-4 px-6 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105 cursor-pointer hover:cursor-pointer">
                <i class="fas fa-lock mr-2"></i>Pay ₹<%= @order.final_total %>
              </button>
            <% end %>
            <p class="text-xs text-gray-500 mt-2">Secure payment powered by Razorpay</p>
          </div>

          <!-- Payment Methods Info -->
          <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
            <div class="flex items-center">
              <i class="fas fa-shield-alt text-blue-600 mr-2"></i>
              <div>
                <h4 class="font-semibold text-blue-800 text-sm">Accepted Payment Methods</h4>
                <p class="text-xs text-blue-700 mt-1">Credit/Debit Cards, UPI, Net Banking, Wallets</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Order Details -->
      <div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-4">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center mr-3">
              <i class="fas fa-shopping-bag text-white text-sm"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-900">Order Details</h2>
          </div>
          
          <!-- Order Items -->
          <div class="space-y-3 mb-6 max-h-64 overflow-y-auto">
            <% @order.order_items.includes(:product).each do |order_item| %>
              <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                <div class="w-12 h-12 bg-gradient-to-br from-<%= order_item.product.color %>-500 to-<%= order_item.product.color %>-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="<%= order_item.product.image_url %> text-lg text-white"></i>
                </div>
                
                <div class="flex-1 min-w-0">
                  <h3 class="font-semibold text-gray-900 text-sm truncate"><%= order_item.product.name %></h3>
                  <div class="flex items-center justify-between mt-1">
                    <div class="text-xs text-gray-600">
                      Qty: <%= order_item.quantity %>
                      <% if order_item.validity_type.present? %>
                        • <%= order_item.validity_display %>
                      <% end %>
                    </div>
                    <span class="font-bold text-gray-900 text-sm">₹<%= order_item.subtotal %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Applied Offers -->
          <% if @order.applied_offers.any? %>
            <div class="border-t border-gray-200 pt-4 mb-4">
              <h3 class="text-sm font-semibold text-gray-900 mb-3">Applied Offers</h3>
              <div class="space-y-2">
                <% @order.applied_offers.each do |offer| %>
                  <div class="flex items-center justify-between p-2 bg-green-50 border border-green-200 rounded-lg">
                    <div>
                      <p class="font-medium text-green-800 text-sm"><%= offer.name %></p>
                      <p class="text-xs text-green-600"><%= offer.display_discount %></p>
                    </div>
                    <span class="text-green-800 font-semibold text-sm">-₹<%= offer.calculate_discount(@order.subtotal) %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Price Breakdown -->
          <div class="border-t border-gray-200 pt-4">
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-semibold">₹<%= @order.subtotal %></span>
              </div>
              
              <% if @order.total_discount > 0 %>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Discount</span>
                  <span class="font-semibold text-green-600">-₹<%= @order.total_discount %></span>
                </div>
              <% end %>
              
              <div class="border-t border-gray-200 pt-2">
                <div class="flex justify-between">
                  <span class="text-lg font-bold text-gray-900">Total</span>
                  <span class="text-lg font-bold text-indigo-600">₹<%= @order.final_total %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Razorpay Script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  // Test payment button handler
  document.getElementById('test-payment-button')?.addEventListener('click', function(e) {
    e.preventDefault();
    
    // Disable button
    this.disabled = true;
    this.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing Test Payment...';
    
    // Simulate payment processing
    setTimeout(() => {
      // Create a form to submit test payment details
      var form = document.createElement('form');
      form.method = 'POST';
      form.action = '<%= payment_callback_path(@order) %>';
      
      var fields = {
        'razorpay_payment_id': 'pay_test_' + Date.now(),
        'razorpay_order_id': '<%= @order.razorpay_order_id %>',
        'razorpay_signature': 'test_signature_' + Date.now(),
        'authenticity_token': '<%= form_authenticity_token %>'
      };
      
      for (var key in fields) {
        var input = document.createElement('input');
        input.type = 'hidden';
        input.name = key;
        input.value = fields[key];
        form.appendChild(input);
      }
      
      document.body.appendChild(form);
      form.submit();
    }, 2000); // 2 second delay to simulate processing
  });

  // Real Razorpay payment button handler
  document.getElementById('rzp-button')?.addEventListener('click', function(e) {
    e.preventDefault();
    
    // Disable button to prevent double clicks
    this.disabled = true;
    this.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
    
    var options = {
      "key": "<%= @razorpay_key %>",
      "amount": "<%= (@order.final_total * 100).to_i %>",
      "currency": "INR",
      "name": "Pisoft Solutions",
      "description": "Order #<%= @order.id %>",
      "image": "https://your-logo-url.com/logo.png",
      "order_id": "<%= @order.razorpay_order_id %>",
      "handler": function (response) {
        // Show success message
        showMessage('Payment successful! Redirecting...', 'success');
        
        // Create a form to submit payment details
        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '<%= payment_callback_path(@order) %>';
        
        var fields = {
          'razorpay_payment_id': response.razorpay_payment_id,
          'razorpay_order_id': response.razorpay_order_id,
          'razorpay_signature': response.razorpay_signature,
          'authenticity_token': '<%= form_authenticity_token %>'
        };
        
        for (var key in fields) {
          var input = document.createElement('input');
          input.type = 'hidden';
          input.name = key;
          input.value = fields[key];
          form.appendChild(input);
        }
        
        document.body.appendChild(form);
        form.submit();
      },
      "prefill": {
        "name": "<%= @order.user&.name || '' %>",
        "email": "<%= @order.user_email %>",
        "contact": "<%= @order.user&.phone || '' %>"
      },
      "notes": {
        "address": "Pisoft Solutions",
        "merchant_order_id": "<%= @order.id %>"
      },
      "theme": {
        "color": "#6366F1"
      },
      "modal": {
        "ondismiss": function() {
          // Re-enable button when modal is dismissed
          var button = document.getElementById('rzp-button');
          button.disabled = false;
          button.innerHTML = '<i class="fas fa-lock mr-2"></i>Pay ₹<%= @order.final_total %>';
        }
      }
    };
    
    var rzp = new Razorpay(options);
    
    rzp.on('payment.failed', function (response) {
      showMessage('Payment failed: ' + response.error.description, 'error');
      
      // Re-enable button
      var button = document.getElementById('rzp-button');
      button.disabled = false;
      button.innerHTML = '<i class="fas fa-lock mr-2"></i>Pay ₹<%= @order.final_total %>';
    });
    
    rzp.open();
  });
  
  function showMessage(message, type) {
    // Create message element
    var messageDiv = document.createElement('div');
    messageDiv.className = 'fixed top-4 right-4 z-50 p-4 rounded-lg shadow-lg max-w-sm';
    
    if (type === 'success') {
      messageDiv.className += ' bg-green-500 text-white';
    } else {
      messageDiv.className += ' bg-red-500 text-white';
    }
    
    messageDiv.innerHTML = message;
    document.body.appendChild(messageDiv);
    
    // Remove message after 5 seconds
    setTimeout(function() {
      if (messageDiv.parentNode) {
        messageDiv.parentNode.removeChild(messageDiv);
      }
    }, 5000);
  }
</script>
