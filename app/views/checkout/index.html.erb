<!-- Checkout Header -->
<section class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-3xl font-bold mb-2">Secure Checkout</h1>
      <p class="text-lg opacity-90">Complete your purchase in just a few steps</p>
    </div>
  </div>
</section>

<!-- Checkout Content -->
<section class="py-8 bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Order Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-indigo-600 rounded-full flex items-center justify-center mr-3">
              <i class="fas fa-user text-white text-sm"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-900">Order Information</h2>
          </div>
          
          <%= form_with model: @order, url: checkout_process_payment_path, method: :post, local: true, class: "space-y-4" do |form| %>
            <% if @order&.errors&.any? %>
              <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                <h3 class="font-semibold">Please fix the following errors:</h3>
                <ul class="list-disc list-inside mt-2">
                  <% @order.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <!-- Flash Messages -->
            <% if flash[:error] %>
              <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                <%= flash[:error] %>
              </div>
            <% end %>
            
            <% if flash[:success] %>
              <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-lg">
                <%= flash[:success] %>
              </div>
            <% end %>
            
            <% unless logged_in? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <%= form.email_field :user_email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "your@email.com", required: true %>
                <p class="text-sm text-gray-500 mt-1">We'll send your order confirmation to this email</p>
              </div>
              
              <!-- Guest User Notice -->
              <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg">
                <div class="flex items-center">
                  <i class="fas fa-info-circle mr-2"></i>
                  <div>
                    <p class="text-sm font-medium">Guest Checkout</p>
                    <p class="text-xs mt-1">You'll be asked to login or create an account to complete your purchase.</p>
                  </div>
                </div>
              </div>
            <% end %>
            
            <!-- Hidden fields for applied offers -->
            <% @applied_offers&.each do |offer| %>
              <%= form.hidden_field :applied_offers, value: offer.id, multiple: true %>
            <% end %>
            
            <!-- Hidden field to ensure order parameters are always submitted -->
            <%= form.hidden_field :user_email, value: current_user&.email || '' %>
            
            <div class="pt-4">
              <% if logged_in? %>
                <%= form.submit "Complete Purchase", class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-4 px-6 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105 cursor-pointer hover:cursor-pointer" %>
              <% else %>
                <%= form.submit "Continue to Login", class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white py-4 px-6 rounded-lg font-semibold text-lg transition duration-300 transform hover:scale-105 cursor-pointer hover:cursor-pointer" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Order Summary -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-4">
          <div class="flex items-center mb-6">
            <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center mr-3">
              <i class="fas fa-shopping-cart text-white text-sm"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-900">Order Summary</h2>
          </div>
          
          <!-- Compact Order Items -->
          <div class="space-y-3 mb-6 max-h-64 overflow-y-auto">
            <% @cart_items.each do |cart_item| %>
              <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                <div class="w-12 h-12 bg-gradient-to-br from-<%= cart_item.product.color %>-500 to-<%= cart_item.product.color %>-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <i class="<%= product_icon(cart_item.product) %> text-lg text-white"></i>
                </div>
                
                <div class="flex-1 min-w-0">
                  <h3 class="font-semibold text-gray-900 text-sm truncate"><%= cart_item.product.name %></h3>
                  <div class="flex items-center justify-between mt-1">
                    <div class="text-xs text-gray-600">
                      Qty: <%= cart_item.quantity %>
                      <% if cart_item.validity_type.present? %>
                        • <%= cart_item.validity_display %>
                      <% end %>
                    </div>
                    <span class="font-bold text-gray-900 text-sm">₹<%= cart_item.subtotal %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Offer Code Section -->
          <div class="border-t border-gray-200 pt-4 mb-4">
            <h3 class="text-sm font-semibold text-gray-900 mb-3">Apply Offer Code</h3>
            
            <%= form_with url: checkout_apply_offer_path, method: :post, local: true, class: "flex space-x-2" do |form| %>
              <%= form.text_field :offer_code, class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 text-sm", placeholder: "Enter code" %>
              <%= form.submit "Apply", class: "bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded-lg font-medium text-sm transition duration-300" %>
            <% end %>
            
            <!-- Applied Offers -->
            <% if @applied_offers&.any? %>
              <div class="mt-3 space-y-2">
                <% @applied_offers.each do |offer| %>
                  <div class="flex items-center justify-between p-2 bg-green-50 border border-green-200 rounded-lg">
                    <div>
                      <p class="font-medium text-green-800 text-sm"><%= offer.name %></p>
                      <p class="text-xs text-green-600"><%= offer.display_discount %></p>
                    </div>
                    <span class="text-green-800 font-semibold text-sm">-₹<%= offer.calculate_discount(@subtotal) %></span>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          
          <!-- Price Breakdown -->
          <div class="border-t border-gray-200 pt-4">
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Subtotal (<%= @cart.total_items %> items)</span>
                <span class="font-semibold">₹<%= @subtotal %></span>
              </div>
              
              <% if @total_discount && @total_discount > 0 %>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">Discount</span>
                  <span class="font-semibold text-green-600">-₹<%= @total_discount %></span>
                </div>
              <% end %>
              
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Tax</span>
                <span class="font-semibold">₹0.00</span>
              </div>
              
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Shipping</span>
                <span class="font-semibold text-green-600">FREE</span>
              </div>
              
              <div class="border-t border-gray-200 pt-3">
                <div class="flex justify-between">
                  <span class="text-lg font-bold text-gray-900">Total</span>
                  <span class="text-lg font-bold text-indigo-600">₹<%= @final_total %></span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Security Notice -->
          <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex items-center">
              <i class="fas fa-shield-alt text-green-600 mr-2 text-sm"></i>
              <div>
                <h4 class="font-semibold text-green-800 text-sm">Secure Checkout</h4>
                <p class="text-xs text-green-700">Bank-level security protection</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
