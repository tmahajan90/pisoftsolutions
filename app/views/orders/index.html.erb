<!-- Order History Header -->
<section class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Order History</h1>
      <p class="text-xl opacity-90">View all your past orders and applied offers</p>
    </div>
  </div>
</section>

<!-- Order History Content -->
<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @orders.any? %>
      <div class="space-y-6">
        <% @orders.each do |order| %>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Order Header -->
            <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">Order #<%= order.id %></h3>
                  <p class="text-sm text-gray-600">Placed on <%= order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                    <%= case order.status
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'paid' then 'bg-blue-100 text-blue-800'
                        when 'shipped' then 'bg-purple-100 text-purple-800'
                        when 'delivered' then 'bg-green-100 text-green-800'
                        when 'cancelled' then 'bg-red-100 text-red-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= order.status.capitalize %>
                  </span>
                </div>
              </div>
            </div>
            
            <!-- Order Items -->
            <div class="px-6 py-4">
              <div class="space-y-3">
                <% order.order_items.includes(:product).each do |order_item| %>
                  <div class="flex items-center space-x-4 p-3 border border-gray-200 rounded-lg">
                    <div class="w-12 h-12 bg-gradient-to-br from-<%= order_item.product.color %>-500 to-<%= order_item.product.color %>-600 rounded-lg flex items-center justify-center">
                      <i class="<%= order_item.product.image_url.present? ? order_item.product.image_url.strip : 'fas fa-box' %> text-lg text-white"></i>
                    </div>
                    
                    <div class="flex-1">
                      <h4 class="font-medium text-gray-900"><%= order_item.product.name %></h4>
                      <p class="text-sm text-gray-600">Qty: <%= order_item.quantity %></p>
                      <% if order_item.validity_type.present? %>
                        <p class="text-xs text-gray-500"><%= order_item.validity_display %></p>
                      <% end %>
                    </div>
                    
                    <div class="text-right">
                      <span class="font-semibold text-gray-900">₹<%= order_item.subtotal %></span>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Applied Offers -->
            <% if order.applied_offers.any? %>
              <div class="px-6 py-4 bg-green-50 border-t border-green-200">
                <h4 class="font-medium text-green-800 mb-3">Applied Offers:</h4>
                <div class="space-y-2">
                  <% order.applied_offers.each do |offer| %>
                    <div class="flex items-center justify-between p-2 bg-white rounded border border-green-200">
                      <div>
                        <p class="font-medium text-green-800"><%= offer.name %></p>
                        <p class="text-sm text-green-600"><%= offer.display_discount %></p>
                      </div>
                      <span class="text-green-800 font-semibold">-₹<%= offer.calculate_discount(order.subtotal) %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <!-- Order Summary -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <div class="space-y-1">
                  <div class="flex items-center space-x-4 text-sm text-gray-600">
                    <span>Subtotal: ₹<%= order.subtotal %></span>
                    <% if order.total_discount > 0 %>
                      <span class="text-green-600">Discount: -₹<%= order.total_discount %></span>
                    <% end %>
                  </div>
                  <div class="text-lg font-bold text-gray-900">
                    Total: ₹<%= order.final_total %>
                  </div>
                </div>
                
                <div class="flex space-x-2">
                  <%= link_to "View Details", order_path(order), class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition duration-300" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
          <i class="fas fa-shopping-bag text-3xl text-gray-400"></i>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No orders yet</h3>
        <p class="text-gray-600 mb-6">Start shopping to see your order history here</p>
        <%= link_to "Browse Products", products_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium transition duration-300" %>
      </div>
    <% end %>
  </div>
</section>
