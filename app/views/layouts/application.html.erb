    <script>
      function initializeDropdown() {
        const dropdown = document.getElementById('user-dropdown');
        const dropdownButton = document.getElementById('user-dropdown-button');
        const dropdownMenu = document.getElementById('user-dropdown-menu');
        let hideTimeout;
        
        if (dropdown && dropdownButton && dropdownMenu) {
          // Remove existing event listeners to prevent duplicates
          dropdown.removeEventListener('mouseenter', dropdown.mouseenterHandler);
          dropdown.removeEventListener('mouseleave', dropdown.mouseleaveHandler);
          dropdownButton.removeEventListener('click', dropdownButton.clickHandler);
          
          // Show dropdown on mouse enter
          dropdown.mouseenterHandler = function() {
            clearTimeout(hideTimeout);
            dropdownMenu.classList.remove('hidden');
          };
          dropdown.addEventListener('mouseenter', dropdown.mouseenterHandler);
          
          // Hide dropdown on mouse leave with 1 second delay
          dropdown.mouseleaveHandler = function() {
            hideTimeout = setTimeout(function() {
              dropdownMenu.classList.add('hidden');
            }, 1000);
          };
          dropdown.addEventListener('mouseleave', dropdown.mouseleaveHandler);
          
          // Also handle button click for mobile/touch devices
          dropdownButton.clickHandler = function(e) {
            e.preventDefault();
            if (dropdownMenu.classList.contains('hidden')) {
              dropdownMenu.classList.remove('hidden');
            } else {
              dropdownMenu.classList.add('hidden');
            }
          };
          dropdownButton.addEventListener('click', dropdownButton.clickHandler);
        }
      }
      
      // Initialize on DOM content loaded
      document.addEventListener('DOMContentLoaded', initializeDropdown);
      
      // Initialize on Turbo navigation (for Rails 7)
      document.addEventListener('turbo:load', initializeDropdown);
      document.addEventListener('turbo:render', initializeDropdown);
      
      // Fallback for older Rails versions
      document.addEventListener('turbolinks:load', initializeDropdown);
    </script>
  </head>

