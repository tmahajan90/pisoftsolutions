<% content_for :title, "Edit Order ##{@order.id}" %>
<% content_for :subtitle, 'Update Order Information' %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to admin_order_path(@order), class: "inline-flex items-center text-blue-600 hover:text-blue-900" do %>
      <i class="fas fa-arrow-left mr-2"></i>Back to Order
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Edit Order #<%= @order.id %></h3>
    </div>

    <div class="p-6">
      <%= form_with model: [:admin, @order], local: true, class: "space-y-6" do |form| %>
        <% if @order.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-400"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @order.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Order Information -->
          <div class="space-y-4">
            <h4 class="text-lg font-medium text-gray-900">Order Information</h4>

            <div>
              <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :status, 
                  options_for_select([
                    ['Pending', 'pending'],
                    ['Paid', 'paid'],
                    ['Shipped', 'shipped'],
                    ['Delivered', 'delivered'],
                    ['Cancelled', 'cancelled']
                  ], @order.status),
                  {},
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div>
              <%= form.label :payment_status, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.select :payment_status, 
                  options_for_select([
                    ['Pending', 'pending'],
                    ['Success', 'success'],
                    ['Failed', 'failed']
                  ], @order.payment_status),
                  { include_blank: 'Select Payment Status' },
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          </div>

          <!-- Customer Information -->
          <div class="space-y-4">
            <h4 class="text-lg font-medium text-gray-900">Customer Information</h4>

            <div>
              <%= form.label :user_email, class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.email_field :user_email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="bg-gray-50 p-4 rounded-md">
              <h5 class="text-sm font-medium text-gray-900 mb-2">Order Summary</h5>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">Order ID:</span>
                  <span class="font-medium">#<%= @order.id %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Total Amount:</span>
                  <span class="font-medium">â‚¹<%= number_with_precision(@order.total_amount, precision: 0) %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Order Date:</span>
                  <span class="font-medium"><%= @order.created_at.strftime("%B %d, %Y") %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Items:</span>
                  <span class="font-medium"><%= @order.order_items.count %></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="border-t pt-6 flex justify-end space-x-3">
          <%= link_to "Cancel", admin_order_path(@order), class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-4 py-2 rounded-md font-medium" %>
          <%= form.submit "Update Order", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
