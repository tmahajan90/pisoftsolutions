<% content_for :title, 'Contact Details' %>
<% content_for :subtitle, @contact.full_details %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Message Details</h2>
            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
              <%= case @contact.contact_status
                  when 'unread'
                    'bg-yellow-100 text-yellow-800'
                  when 'in_progress'
                    'bg-blue-100 text-blue-800'
                  when 'responded'
                    'bg-green-100 text-green-800'
                  when 'closed'
                    'bg-gray-100 text-gray-800'
                  end %>">
              <%= @contact.contact_status.titleize %>
            </span>
          </div>
          
          <div class="prose max-w-none">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Message:</h3>
            <div class="bg-gray-50 rounded-lg p-6 mb-6">
              <p class="text-gray-700 whitespace-pre-wrap"><%= @contact.message %></p>
            </div>
          </div>
          
          <!-- Status Update Form -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Update Status</h3>
            <%= form_with model: @contact, url: admin_contact_path(@contact), method: :patch, local: true, class: "space-y-4" do |form| %>
              <div>
                <label for="contact_contact_status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <%= form.select :contact_status, Contact.contact_statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              </div>
              <div>
                <%= form.submit "Update Status", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-semibold transition duration-300" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h3>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-500">Name</label>
              <p class="text-gray-900 font-medium"><%= @contact.name %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Email</label>
              <p class="text-gray-900">
                <a href="mailto:<%= @contact.email %>" class="text-blue-600 hover:text-blue-800">
                  <%= @contact.email %>
                </a>
              </p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Phone</label>
              <p class="text-gray-900">
                <a href="tel:<%= @contact.phone %>" class="text-blue-600 hover:text-blue-800">
                  <%= @contact.phone %>
                </a>
              </p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">How did they find us?</label>
              <p class="text-gray-900"><%= @contact.source&.titleize || 'Not specified' %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Role</label>
              <p class="text-gray-900"><%= @contact.role&.titleize || 'Not specified' %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Requirement</label>
              <p class="text-gray-900"><%= @contact.requirement&.titleize || 'General Inquiry' %></p>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-500">Submitted</label>
              <p class="text-gray-900">
                <%= @contact.created_at.strftime("%B %d, %Y") %><br>
                <span class="text-sm text-gray-500"><%= @contact.created_at.strftime("%I:%M %p") %></span>
              </p>
            </div>
          </div>
          
          <!-- Quick Actions -->
          <div class="border-t border-gray-200 pt-6 mt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-2">
              <%= link_to "Reply via Email", "mailto:#{@contact.email}?subject=Re: Your inquiry to PiSoftSolutions", class: "block w-full bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-center font-semibold transition duration-300" %>
              <%= link_to "Call Contact", "tel:#{@contact.phone}", class: "block w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-center font-semibold transition duration-300" %>
              <%= button_to "Delete Contact", admin_contact_path(@contact), method: :delete, data: { confirm: 'Are you sure you want to delete this contact?' }, class: "block w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-center font-semibold transition duration-300", form: { class: "w-full" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
