<% content_for :title, @product.name %>
<% content_for :subtitle, 'Product Details' %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to admin_products_path, class: "inline-flex items-center text-blue-600 hover:text-blue-900" do %>
      <i class="fas fa-arrow-left mr-2"></i>Back to Products
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Product Details -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Product Information</h3>
            <div class="flex space-x-2">
              <%= link_to edit_admin_product_path(@product), class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm" do %>
                <i class="fas fa-edit mr-1"></i>Edit
              <% end %>
              <%= link_to admin_product_path(@product), 
                  method: :delete, 
                  data: { confirm: 'Are you sure you want to delete this product?' },
                  class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm" do %>
                <i class="fas fa-trash mr-1"></i>Delete
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Product Image -->
            <div>
              <% if @product.image_url.present? %>
                <% if @product.image_url.start_with?('http') %>
                  <img src="<%= @product.image_url %>" alt="<%= @product.name %>" class="w-full h-64 object-cover rounded-lg">
                <% else %>
                  <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
                    <i class="<%= @product.image_url %> text-gray-600 text-6xl"></i>
                  </div>
                <% end %>
              <% else %>
                <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
                  <i class="fas fa-image text-gray-400 text-4xl"></i>
                </div>
              <% end %>
            </div>
            
            <!-- Product Info -->
            <div class="space-y-4">
              <div>
                <h2 class="text-2xl font-bold text-gray-900"><%= @product.name %></h2>
                <p class="text-gray-600 mt-2"><%= @product.description %></p>
              </div>
              
              <div class="flex items-center space-x-4">
                <span class="inline-flex px-2 py-1 text-sm font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= @product.category %>
                </span>
                <% if @product.badge.present? %>
                  <span class="inline-flex px-2 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">
                    <%= @product.badge %>
                  </span>
                <% end %>
              </div>
              
              <div class="flex items-center">
                <div class="flex items-center">
                  <% 5.times do |i| %>
                    <i class="fas fa-star <%= i < @product.rating.to_i ? 'text-yellow-400' : 'text-gray-300' %>"></i>
                  <% end %>
                </div>
                <span class="ml-2 text-sm text-gray-500">(<%= @product.rating %>)</span>
              </div>
              
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span class="text-gray-600">Price:</span>
                  <span class="font-semibold text-lg">₹<%= number_with_precision(@product.price, precision: 0) %></span>
                </div>
                <% if @product.original_price && @product.original_price > @product.price %>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Original Price:</span>
                    <span class="text-gray-500 line-through">₹<%= number_with_precision(@product.original_price, precision: 0) %></span>
                  </div>
                <% end %>
                <div class="flex justify-between">
                  <span class="text-gray-600">Stock:</span>
                  <span class="font-semibold <%= @product.stock < 10 ? 'text-red-600' : 'text-green-600' %>">
                    <%= @product.stock %> units
                  </span>
                </div>
                <% if @product.color.present? %>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Color:</span>
                    <span class="font-semibold"><%= @product.color %></span>
                  </div>
                <% end %>
              </div>
              
              <!-- Validity Options -->
              <% if @product.validity_type.present? %>
                <div class="border-t pt-4">
                  <h4 class="font-semibold text-gray-900 mb-2">Validity Options</h4>
                  <div class="space-y-2">
                    <div class="flex justify-between">
                      <span class="text-gray-600">Type:</span>
                      <span class="font-semibold"><%= @product.validity_type.humanize %></span>
                    </div>
                    <% if @product.validity_duration.present? %>
                      <div class="flex justify-between">
                        <span class="text-gray-600">Duration:</span>
                        <span class="font-semibold"><%= @product.validity_duration %></span>
                      </div>
                    <% end %>
                    <% if @product.validity_price.present? %>
                      <div class="flex justify-between">
                        <span class="text-gray-600">Validity Price:</span>
                        <span class="font-semibold">₹<%= number_with_precision(@product.validity_price, precision: 0) %></span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Sales Statistics -->
    <div class="space-y-6">
      <!-- Sales Stats -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Sales Statistics</h3>
        <div class="space-y-4">
          <div class="flex justify-between">
            <span class="text-gray-600">Total Sold:</span>
            <span class="font-semibold"><%= @total_sold %> units</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Total Revenue:</span>
            <span class="font-semibold text-green-600">₹<%= number_with_precision(@total_revenue, precision: 0) %></span>
          </div>
        </div>
      </div>
      
      <!-- Recent Orders -->
      <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Recent Orders</h3>
        </div>
        <div class="p-6">
          <% if @order_items.any? %>
            <div class="space-y-3">
              <% @order_items.each do |order_item| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <div class="font-medium text-sm">Order #<%= order_item.order.id %></div>
                    <div class="text-xs text-gray-500"><%= order_item.order.created_at.strftime("%B %d, %Y") %></div>
                  </div>
                  <div class="text-right">
                    <div class="font-semibold text-sm">₹<%= number_with_precision(order_item.price, precision: 0) %></div>
                    <div class="text-xs text-gray-500"><%= order_item.quantity %> units</div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-4">No orders yet</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
