<!-- Contact Form Section -->
<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Send us a Message</h2>
        <p class="text-gray-600 mb-8">Fill out the form below and we'll get back to you within 24 hours.</p>
        
        <%= form_with url: contact_submit_path, method: :post, local: true, class: "space-y-6" do |form| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
              <input type="text" name="name" id="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
              <input type="tel" name="phone" id="phone" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
            <input type="email" name="email" id="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          </div>
          
          <div>
            <label for="source" class="block text-sm font-medium text-gray-700 mb-2">How did you find us?</label>
            <select name="source" id="source" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="">Select an option</option>
              <option value="google">Google</option>
              <option value="facebook">Facebook</option>
              <option value="friend">Friend/Referral</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="role" class="block text-sm font-medium text-gray-700 mb-2">Your Role</label>
            <select name="role" id="role" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="">Select your role</option>
              <option value="student">Student</option>
              <option value="professional">Professional</option>
              <option value="hobbyist">Hobbyist</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="requirement" class="block text-sm font-medium text-gray-700 mb-2">Choose Your Requirement</label>
            <select name="requirement" id="requirement" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="">Select your requirement</option>
              <option value="web_development">Web Development</option>
              <option value="app_development">App Development</option>
              <option value="seo">SEO</option>
              <option value="whatsapp_marketing">WhatsApp Bulk Marketing Software</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
            <textarea name="message" id="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Tell us about your project or inquiry..."></textarea>
          </div>
          
          <div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-4 rounded-lg font-semibold text-lg transition duration-300">
              Send Message
            </button>
          </div>
        <% end %>
      </div>
      
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Get in Touch</h2>
          <p class="text-gray-600 mb-8">
            We're here to help you succeed. Whether you have questions about our services, need technical support, or want to discuss a custom project, our team is ready to assist you.
          </p>
        </div>
        
        <!-- Contact Methods -->
        <div class="space-y-6">
          <div class="flex items-start">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
              <i class="fas fa-phone text-blue-600"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-1">Phone Support</h3>
              <p class="text-gray-600 mb-2">+1 (555) 123-4567</p>
              <p class="text-sm text-gray-500">Monday to Friday, 11:00 AM - 5:00 PM</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
              <i class="fab fa-whatsapp text-green-600"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-1">WhatsApp Support</h3>
              <p class="text-gray-600 mb-2">+1 (555) 123-4567</p>
              <p class="text-sm text-gray-500">Quick responses for urgent queries</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mr-4">
              <i class="fas fa-envelope text-red-600"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-1">Email Support</h3>
              <p class="text-gray-600 mb-2">support@pisoftsolutions.com</p>
              <p class="text-sm text-gray-500">We'll respond within 24 hours</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
              <i class="fas fa-map-marker-alt text-purple-600"></i>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-1">Office Address</h3>
              <p class="text-gray-600 mb-2">PISOFTSOLUTION</p>
              <p class="text-sm text-gray-500">India</p>
            </div>
          </div>
        </div>
        
        <!-- Support Hours -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Support Hours</h3>
          <div class="space-y-2 text-sm text-gray-600">
            <div class="flex justify-between">
              <span>Monday - Friday:</span>
              <span>11:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday:</span>
              <span>11:00 AM - 3:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday:</span>
              <span>Closed</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

