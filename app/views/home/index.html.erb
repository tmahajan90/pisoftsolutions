<!-- Products Section -->
<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Products</h2>
      <p class="text-xl text-gray-600">Discover our premium software solutions designed to boost your business growth</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      <% @featured_products.each do |product| %>
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <!-- Product Image -->
          <div class="relative">
            <div class="h-48 bg-gradient-to-br from-<%= product.color %>-500 to-<%= product.color %>-600 flex items-center justify-center">
              <i class="<%= product.image_url %> text-6xl text-white"></i>
            </div>
            
            <!-- Badge -->
            <div class="absolute top-3 left-3">
              <span class="bg-<%= get_badge_color(product.badge) %>-100 text-<%= get_badge_color(product.badge) %>-800 text-xs font-semibold px-2 py-1 rounded-full"><%= product.badge %></span>
            </div>
            
            <!-- Quick View Button -->
            <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center opacity-0 hover:opacity-100">
              <button onclick="window.location.href='<%= product_detail_path(product) %>'" class="bg-white text-gray-900 px-4 py-2 rounded-lg font-semibold transform translate-y-4 hover:translate-y-0 transition-all duration-300">
                <i class="fas fa-eye mr-2"></i>View Details
              </button>
            </div>
          </div>
          
          <!-- Product Info -->
          <div class="p-6">
            <!-- Category -->
            <div class="text-xs text-gray-500 uppercase tracking-wide mb-2"><%= product.category %></div>
            
            <!-- Product Name -->
            <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2"><%= product.name %></h3>
            
            <!-- Rating -->
            <div class="flex items-center mb-3">
              <div class="flex text-yellow-400 text-sm">
                <% product.rating.to_i.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (5 - product.rating.to_i).times do %>
                  <i class="far fa-star"></i>
                <% end %>
              </div>
              <span class="text-sm text-gray-600 ml-2">(<%= product.rating %>)</span>
            </div>
            
            <!-- Price -->
            <div class="mb-4">
              <div class="flex items-baseline">
                <% 
                  # Get the appropriate price to display
                  display_price = if product.get_validity_options.any?
                    # Use the default validity option price, or the first one if no default
                    default_option = product.default_validity_option || product.get_validity_options.first
                    default_option&.price
                  else
                    # Use the product's base price if no validity options exist
                    product.price
                  end
                  
                  # Ensure we have a reasonable price (not 1.0 unless it's actually intended)
                  display_price = product.price if display_price == 1.0 && product.price != 1.0
                %>
                <span class="text-2xl font-bold text-<%= product.color %>-600">â‚¹<%= display_price %></span>
                <span class="text-sm text-gray-500 ml-2">Starting from</span>
              </div>
              <% if product.original_price && product.original_price > product.price %>
                <div class="flex items-center text-xs text-green-600 font-semibold mt-1">
                  <span>Save â‚¹<%= (product.original_price - product.price).to_f %></span>
                </div>
              <% end %>
            </div>
            
            <!-- Validity -->
            <div class="mb-4">
              <div class="flex items-center text-xs text-gray-600">
                <i class="fas fa-clock text-blue-500 mr-2"></i>
                <% 
                  # Get the appropriate validity option to display
                  display_validity_option = if product.get_validity_options.any?
                    # Use the default validity option, or the first one if no default
                    product.default_validity_option || product.get_validity_options.first
                  else
                    nil
                  end
                  
                  # If we have a validity option, show its label, otherwise show a default message
                  validity_text = if display_validity_option
                    display_validity_option.label
                  else
                    "Lifetime"
                  end
                %>
                <span class="font-semibold">Validity: <%= validity_text %></span>
              </div>
            </div>
             
            <!-- Features -->
            <div class="space-y-1 mb-4">
              <div class="flex items-center text-xs text-gray-600">
                <i class="fas fa-check text-green-500 mr-2"></i>
                <span>Premium features</span>
              </div>
              <div class="flex items-center text-xs text-gray-600">
                <i class="fas fa-check text-green-500 mr-2"></i>
                <span>24/7 support</span>
              </div>
              <div class="flex items-center text-xs text-gray-600">
                <i class="fas fa-check text-green-500 mr-2"></i>
                <span>Money-back guarantee</span>
              </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex gap-2">
              <button class="add-to-cart-btn flex-1 bg-<%= product.color %>-600 hover:bg-<%= product.color %>-700 text-white py-2 px-4 rounded-lg font-semibold text-sm transition duration-300 flex items-center justify-center cursor-pointer" data-product-id="<%= product.id %>">
                <i class="fas fa-shopping-cart mr-2"></i>
                Add to Cart
              </button>
              <button onclick="window.location.href='<%= product_detail_path(product) %>'" class="px-3 py-2 border border-<%= product.color %>-600 text-<%= product.color %>-600 hover:bg-<%= product.color %>-50 rounded-lg transition duration-300 cursor-pointer">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Show More Button -->
    <div class="text-center">
      <%= link_to products_path, class: "inline-flex items-center bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-semibold text-lg transition duration-300" do %>
        <i class="fas fa-arrow-right mr-2"></i>
        View All Products
      <% end %>
    </div>
  </div>
</section>

