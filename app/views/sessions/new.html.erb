<!-- Login Header -->
<section class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Welcome Back</h1>
      <p class="text-xl opacity-90">Sign in to your PiSoftSolutions account</p>
    </div>
  </div>
</section>

<!-- Login Form -->
<section class="py-12">
  <div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Sign In</h2>
        <p class="text-gray-600 mt-2">Access your account and orders</p>
      </div>
      
      <%= form_with url: login_path, local: true, class: "space-y-6" do |form| %>
        <% if flash[:alert] %>
          <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
            <%= flash[:alert] %>
          </div>
        <% end %>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "your@email.com", required: true %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
          <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Enter your password", required: true %>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="remember_me" class="ml-2 block text-sm text-gray-900">
              Remember me
            </label>
          </div>
        </div>
        
        <div>
          <%= form.submit "Sign In", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white py-3 px-6 rounded-lg font-semibold transition duration-300" %>
        </div>
      <% end %>
      
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Don't have an account? 
          <%= link_to "Sign up", signup_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
        </p>
      </div>
      
      <!-- Features -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">What you can do:</h3>
        <div class="space-y-3">
          <div class="flex items-center">
            <i class="fas fa-shopping-cart text-indigo-500 mr-3"></i>
            <span class="text-gray-600">View your order history</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-tags text-indigo-500 mr-3"></i>
            <span class="text-gray-600">Apply exclusive offers</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-user text-indigo-500 mr-3"></i>
            <span class="text-gray-600">Manage your profile</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-headset text-indigo-500 mr-3"></i>
            <span class="text-gray-600">Get priority support</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
